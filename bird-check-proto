def birdc(*cmd, v6: false)
  IO.popen([v6 ? 'birdc6' : 'birdc', *cmd], 'r', &:read).each_line.lazy.map(&:chomp).grep_v(/^BIRD .* ready\.$/).to_a
end

v6 = ARGV.delete('-6')
name = ARGV.first

line = birdc('show', 'protocols', name, v6: v6).last
if line.end_with?('is not a protocol')
  exit 2
end

name,proto,table,state,since,info = line.split(/\s+/, 6)
case state
when nil
  exit 2
when 'up'
  exit 0
when 'down'
  exit 2
else
  exit 1
end

